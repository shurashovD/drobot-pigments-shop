{
    "include": ["./", "./index.d.ts"],
    "compilerOptions": {
        "module": "ES2020",
        "target": "ES5",
        "jsx": "react-jsx",
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "strict": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "typeRoots": ["./../shared"]
    },
    "references": [
        {
            "path": "./../shared"
        }
    ]
}